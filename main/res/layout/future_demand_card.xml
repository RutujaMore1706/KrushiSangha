<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/future_demand_card_view"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/future_card_organization_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="organization_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/future_card_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Commodity: Potato"
                android:layout_below="@+id/future_card_organization_name"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/future_card_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/future_card_quantity"
                android:layout_alignParentRight="true"
                android:layout_marginTop="75dp"
                android:text="Quality: A1"
                android:textSize="18sp"
           />

            <TextView
                android:id="@+id/future_card_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/future_card_product"
                android:layout_marginTop="5dp"
                android:text="Quantity: 1 ton"
                android:textSize="18sp"
              />

            <TextView
                android:id="@+id/future_card_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/future_card_quantity"
                android:layout_marginTop="5dp"
                android:text="Delivery: March 2020"
                android:textSize="18sp"
               />

            <TextView
                android:id="@+id/future_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/future_card_delivery"
                android:layout_alignParentRight="true"
                android:text="20190226"
                android:textSize="18sp"
              />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>